`timescale 1 ns / 100 ps

module BinaryCountdown_5bit_tb;
	
	reg clk;
	reg reset;
	reg [4:0] reset_value;
	wire [4:0] count;
	
	BinaryCountdown_5bit dut (
		clk,
		reset,
		reset_value,
		count
	);
	
always begin

	#2;
	clk <= ~clk;
	
end

integer i;
integer j;

initial begin

	clk = 1'b1;
	reset = 1'b1;
	reset_value = 5'b00000;
	
	#10;
	
	reset = 1'b0;
	for (j = 0; j < 10; j = j+1) begin
	reset_value = $urandom()%32;
		for (i = 0; i < 50; i = i+1) begin
			if (i == 10|| i == 35) begin
				reset = 1'b1;
			end else begin
				reset = 1'b0;
			end
			#1;
		end
		#1;
	end
	
	
	$stop;
	
end
	


endmodule
