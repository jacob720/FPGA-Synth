`timescale 1 ns / 100 ps

module Decay_tb;
	reg clk;
	reg [19:0]in;
	reg [4:0]decay_amount;
	reg start;
	wire [19:0] out;
	wire start_sustain;

	
	Decay dut(
	clk,
	in,
	decay_amount,
	start,
	out,
	start_sustain
);
	
	always begin
		clk = ~clk;
		in = ~in;
		#5;
	end
	
	integer i;
	integer j;
	initial begin
		clk<=1'b1;
		start<=1'b0;
		//in<= $urandom()%256;
		in<=8'b11111111;
		#10;
		start<=1'b1;
		//in<= $urandom()%256;
		#10;
		start <=1'b0;
		for(j=0; j<20; j=j+1) begin
				decay_amount <= j;
				start <= 1'b1;
				#10;
				start <= 1'b0;
			for(i=0; i<40; i=i+1) begin
				//in<= $urandom()%256;
				#10;
			end
		end
	
	$stop;
	end


endmodule